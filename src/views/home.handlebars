<div>
  <h1>Productos</h1>
  <h2>Bienvenido {{products.firstName}} {{products.lastName}}</h2>
  <h4>productos de tu carrito:{{#each products.cart.products}}<li>{{product.title}}  ${{product.price}} x{{quantity}}</li>{{/each}}<br/>
  </h4>

  <h3>Estos son los producto de hoy:</h3>

  <ul>
    {{#each products.docs }}
      <li>
        id:
        {{id}}
        <br />
        title:
        {{title}}
        <br />
        description:
        {{description}}
        <br />
        price:
        {{price}}
        <br />
        thumbnail:
        {{thumbnail}}
        <br />
        code:
        {{code}}
        <br />
        stock:
        {{stock}}
        <br />
        status:
        {{status}}
        <br />
        category:
        {{category}}
        <br>
        <button id="addToCart" onclick="AddToCart('{{id}}','{{../products.cart.id}}')">Add to cart</button>
      </li>
      
    {{/each}}</ul>
    <br/>
      {{#if products.nextPage}}
      <button><a href="/views/products?page={{products.nextPage}}">Siguiente</a></button>
      {{/if}}
      {{#if products.prevPage}}
      <button><a href="/views/products?page={{products.prevPage}}">Anterior</a></button>
      {{/if}}

      <br />
</div>
