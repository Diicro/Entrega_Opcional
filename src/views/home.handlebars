<div>
  <h2>Productos</h2>
  <ul>
    {{#each products.docs }}
      <li>
        id:
        {{id}}
        <br />
        title:
        {{title}}
        <br />
        description:
        {{description}}
        <br />
        price:
        {{price}}
        <br />
        thumbnail:
        {{thumbnail}}
        <br />
        code:
        {{code}}
        <br />
        stock:
        {{stock}}
        <br />
        status:
        {{status}}
        <br />
        category:
        {{category}}
        <br>
        <button id="addToCart" onclick="AddToCart('{{id}}')">Add to cart</button>
      </li>
      
    {{/each}}</ul>
    <br/>
      {{#if products.nextPage}}
      <button><a href="/views/products/{{products.nextPage}}">Siguiente</a></button>
      {{/if}}
      {{#if products.prevPage}}
      <button><a href="/views/products/{{products.prevPage}}">Anterior</a></button>
      {{/if}}

      <br />
</div>
